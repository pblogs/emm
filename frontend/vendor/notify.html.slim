.cg-notify-message.e-notify ng-class="[$classes, $position === 'center' ? 'cg-notify-message-center' : '', $position === 'left' ? 'cg-notify-message-left' : '', $position === 'right' ? 'cg-notify-message-right' : '']" ng-style="{'margin-left': $centerMargin}"
  div ng-show="!$messageTemplate"
    | {{$message}}
  .cg-notify-message-template ng-show="$messageTemplate"
  button.cg-notify-close ng-click="$close()" type="button"
    span aria-hidden="true" &times;
    span.cg-notify-sr-only Close
