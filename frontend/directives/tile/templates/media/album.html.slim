h4.e-brown Life event
.row.album-content-wrapper ng-class="{'small': tile.size == 'small', 'middle': tile.size == 'middle', 'vertical': tile.size == 'vertical'}"
  div ng-class="{ 'small-album': tile.size == 'small', 'col-sm-4': tile.size == 'middle', 'col-sm-6': tile.size == 'large', 'vertical': tile.size == 'vertical'}"
    a ui-sref="app.user.album({user_id: tile.content.user.id, album_id: tile.content.id})"
      .image-wrapper
        img.tile-img ng-src="{{content.cover_url.thumb | imageFilter:'album'}}" draggable="false"
      .album-title ng-show="tile.size == 'large' || tile.size == 'vertical'" ng-style="{'border-color': content.color}"
        .big-count ng-bind="::content.records_count" ng-style="{'background-color': content.color}"
        .title-text
          .content-count.e-brown
            span> ng-bind="::content.photos_count"
            | photos,
            span<> ng-bind="::content.videos_count"
            | videos
          .title.e-brown ng-bind="content.title"
    .like-wrapper.text-right.m-t-5 ng-show="tile.size =='large'"
      like target="content" type="album"

  div ng-class="{ 'hidden': tile.size == 'small', 'col-sm-8': tile.size == 'middle', 'col-sm-6': tile.size == 'large', 'vertical': tile.size == 'vertical'}"
    h4.m-t-0.title.e-brown.font-bold ng-bind="content.title" ng-show="tile.size == 'middle'"
    .description
      .e-brown.description-content ng-show="tile.size == 'large'" ta-bind='' ng-model="content.description"
      .e-brown.m-t-20
        .avatar-wrapper
          img.img-responsive ng-src="{{content.user.avatar_url.thumb | imageFilter:'avatar'}}" draggable="false"
        .author-name<
          | Added by
          a.e-link< ui-sref="app.user.show({userId: content.user.id})"
          span> ng-bind="content.user.first_name"
          span ng-bind="content.user.last_name"
      .e-brown.m-t-20 ng-show="tile.size == 'large'"
        span ng-show="content.start_date"
          | On
          span ng-bind="content.start_date | date: 'longDate'"
        span<> ng-show="content.location_name && content.start_date" at
        a.e-link.pointer ng-if="content.location_name" ng-bind="content.location_name" href="http://maps.google.com/maps?q= {{content.latitude}},{{content.longitude}}" target="_blank"
