.tile.thumbnail.pointer class="{{tile.content_type}} {{tile.widget_type}} {{tile.size}}"
  .tile-edit-buttons ng-if="editable"
    i.fa.fa-times ng-click="onRemove(tile)" tooltip="Remove tile" tooltip-placement="bottom"
    i.fa.fa-pencil.edit-button ng-click="onEdit(tile)" tooltip="Edit tile" tooltip-placement="bottom"
    i.fa.fa-arrows.drag-handle
  .content-wrapper ng-click="showTile(tile)" ng-include="getTemplate"
