grid.grid-animated ng-class="pageLoadingClass" tiles="currentPage.tiles" on-edit="editTile" editable="canEditTiles" on-resize="updateTiles" on-reorder="updateTiles" on-remove="destroyTile" user="user"

.pager ng-if="pages.length > 1"
  .page ng-repeat="page in pages" ng-class="{'active': page.id == currentPage.id}" ng-click="loadPage(page)"

i.fa.fa-circle-o-notch.fa-spin.page-loading.nga-default.nga-fade ng-show="showLoader"
